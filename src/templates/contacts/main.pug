				.contacts__map
					img(src="img/map.jpg", alt="map")
			.contacts__form
				form.contacts-form(action="/", method="post")
					p.contacts-form__title!=CONTACTS.contacts_form_title
					p.contacts-form__desc!=CONTACTS.contacts_form_description
					.contacts-form__wrapper
						.contacts-form__inputs
							input.contacts-form__input(type="text" name="name" placeholder=CONTACTS.contacts_field_name)
							input.contacts-form__input(type="phone" name="tel" placeholder=CONTACTS.contacts_field_phone)
							input.contacts-form__input(type="email" name="email" placeholder=CONTACTS.contacts_field_email)
							textarea.contacts-form__input.contacts-form__input--text(name="comment" placeholder=CONTACTS.contacts_field_message)
						button.contacts-form__btn.btn!=CONTACTS.contacts_btn